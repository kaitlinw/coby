<script class="API DATA">
    var eventName = document.querySelector(".event-name")
    var mainImage = document.querySelector(".main-image")
    var eventVenue = document.querySelector(".event-venue")
    var eventVenueLink = document.querySelector(".event-venue-link")
    var eventDate = document.querySelector(".event-date")
    var eventId

    $.ajax({
    type:"GET",
    url:"https://app.ticketmaster.com/discovery/v2/events.json?id=16vGZ4srkG7lNML&size=1&apikey=4YWDBJED6GiApvdUBnHWa3hVuiXC4YnJ",
    async:true,
    dataType: "json",
    success: (resp) => {
        result = resp._embedded.events[0]
        eventName.textContent = result.name
        mainImage.src = result.images[0].url
        mainImage.style.height = "400px"
        eventVenue.textContent = result._embedded.venues[0].name
        eventVenueLink.href = `https://www.google.com/maps/search/?api=1&query=${result._embedded.venues[0].name.replace(' ', '+')}`
        eventDate.textContent = result.dates.start.localDate + " " + result.dates.start.localTime

        },
    error: (xhr, status, err) => {
        // This time, we do not end up here!
        console.log(xhr, status, err)
    }
    })

</script>

<script class="create-form">
    var createPostSection = document.querySelector('.create-post-section')
